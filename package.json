{
  "name": "dashp",
  "description": "Utilities for monadic promises.",
  "license": "GPL-3.0",
  "author": "Christo <christo@cryptodrunks.net>",
  "homepage": "https://github.com/critocrito/dashp#readme",
  "repository": "https://github.com/critocrito/dashp.git",
  "version": "0.11.0",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "benchmarks": "for i in benchmarks/*.suite.js; do babel-node $i; done",
    "benchmarks:all": "babel-node benchmarks/all.suite.js",
    "benchmarks:checkTypes": "babel-node benchmarks/check-types.suite.js",
    "benchmarks:curry": "babel-node benchmarks/curry.suite.js",
    "build": "yarn lint && yarn test && yarn compile",
    "clean": "rimraf dist",
    "precompile": "yarn clean",
    "compile": "babel --verbose -s -D -d dist src",
    "compile:watch": "yarn compile -w",
    "fix": "yarn lint --fix",
    "lint": "eslint test src benchmarks",
    "prepublishOnly": "yarn build",
    "prerelease": "yarn build",
    "release": "standard-version -i Changelog.md -m \"chore(release): bumped to version %s\" --sign",
    "test": "ava",
    "test:coverage": "nyc ava",
    "test:watch": "yarn test -w"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.7",
    "@babel/register": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "ava": "^3.13.0",
    "ava-fast-check": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "benchmark": "^2.1.4",
    "bluebird": "^3.7.2",
    "coveralls": "^3.1.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-ava": "^11.0.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-lodash-fp": "^2.2.0-a1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "eslint-plugin-unicorn": "^23.0.0",
    "fast-check": "^2.7.0",
    "husky": "^4.3.0",
    "in-range": "^2.0.0",
    "lint-staged": "^10.5.2",
    "lodash": "^4.17.5",
    "nyc": "^15.1.0",
    "prettier": "^2.2.0",
    "prettier-package-json": "^2.1.3",
    "rimraf": "^2.6.2",
    "sinon": "^9.2.1",
    "standard-version": "^6.0.1",
    "time-span": "^3.0.0"
  },
  "keywords": [
    "async",
    "functional",
    "monad",
    "monadic",
    "monads",
    "promise",
    "promises",
    "promises-aplus",
    "static-land"
  ],
  "engines": {
    "node": ">=8"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "! git rev-parse --abbrev-ref HEAD | grep -q master || commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "! git rev-parse --abbrev-ref HEAD | grep -q master || (lint-staged && yarn build)"
    }
  },
  "lint-staged": {
    "{*.json,*rc}": [
      "prettier --parser json --write"
    ],
    "**/package.json": [
      "prettier-package-json --write"
    ],
    "{*.js}": [
      "eslint --fix"
    ]
  }
}
