{
  "name": "nodejs-lib-scaffold",
  "version": "0.0.0",
  "description": "A scaffolding repository to quick start a new NodeJS library.",
  "main": "_dist/index.js",
  "config": {
    "srcDir": "lib",
    "testDir": "test",
    "distDir": "_dist",
    "reporter": "spec",
    "changelog": "Changelog.md"
  },
  "scripts": {
    "commitmsg": "validate-commit-msg",
    "prepublish": "git push --follow-tags origin master && npm run build",
    "lint:src": "eslint --cache $npm_package_config_testDir $npm_package_config_srcDir",
    "lint:docs": "documentation lint $npm_package_config_srcDir/**/*.js",
    "watch:test": "chokidar \"$npm_package_config_testDir/**/*.js\" \"$npm_package_config_srcDir/**/*.js\" -c \"npm run test -s\"",
    "watch:lint": "chokidar \"$npm_package_config_testDir/**/*.js\" \"$npm_package_config_srcDir/**/*.js\" -c \"npm run lint -s\"",
    "watch:docs": "chokidar \"$npm_package_config_srcDir/**/*.js\" -c \"npm run docs\"",
    "watch:build": "chokidar \"$npm_package_config_srcDir/**/*.js\" -c \"npm run compile -s\"",
    "test": "mocha -c --reporter $npm_package_config_reporter --compilers js:babel-register $npm_package_config_testDir/**/*.spec.js",
    "watch": "concurrently -p \"[{name}]\" -n \"LINT,BUILD,TEST,DOCS\" \"npm run watch:lint\" \"npm run watch:build\" \"npm run watch:test\" \"npm run watch:docs\"",
    "lint": "npm run lint:src && npm run lint:docs",
    "compile": "babel -d $npm_package_config_distDir $npm_package_config_srcDir",
    "docs": "documentation readme --shallow --readme-file Readme.md -s \"API\" $npm_package_config_srcDir/index.js",
    "clean": "rimraf $npm_package_config_distDir",
    "build": "npm run clean && npm run lint && npm run test && npm run compile",
    "release": "standard-version -i $npm_package_config_changelog -m \"chore(release): Bumped to version %s.\" --sign",
    "release-candidate": "npm run release -- --prerelease \"rc\""
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/critocrito/nodejs-lib-scaffold.git"
  },
  "keywords": [],
  "author": "Christo <christo@cryptodrunks.net>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://gitlab.com/critocrito/nodejs-lib-scaffold/issues"
  },
  "homepage": "https://gitlab.com/critocrito/nodejs-lib-scaffold#Readme.md",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.5.0",
    "documentation": "^5.0.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-compat": "^1.0.4",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-promise": "^3.5.0",
    "husky": "^0.14.3",
    "jsverify": "^0.8.2",
    "mocha": "^3.4.2",
    "rimraf": "^2.6.1",
    "standard-version": "^4.2.0",
    "validate-commit-msg": "^2.13.1"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "lodash": "^4.17.4"
  }
}
